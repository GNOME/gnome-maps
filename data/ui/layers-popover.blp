using Gtk 4.0;

menu layers_menu {
  section {
    item {
      label: _("Show Scale");
      action: "win.show-scale";
    }

    item {
      label: _("Show Location Marker");
      action: "win.show-location-marker";
    }
  }

  section {
    item {
      custom: "layers_list";
    }

    item {
      // Translators: This string uses ellipsis character
      label: _("Open Shape Layerâ€¦");
      action: "win.open-shape-layer";
    }
  }
}

template $Gjs_LayersPopover: PopoverMenu {
  menu-model: layers_menu;

  [layers_list]
  Box layersSectionBox {
    visible: false;
    orientation: vertical;

    ListBox layersListBox {
      selection-mode: none;
    }

    Separator {}
  }
}
